<h2>Update the drone</h2>
<hr>

<form action="/drones/{{id}}/edit" method="POST">
    <div class="mb-3 mt-5">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="droneName" name="name" value="{{name}}">
    </div>
    <div class="mb-3 mt-5">
        <label for="propellers" class="form-label">Propellers</label>
        <input type="text" class="form-control" id="dronePropellers" name="propellers" value="{{propellers}}">
    </div>
    <div class="mb-3">
        <label for="maxSpeed" class="form-label">Speed</label>
        <input type="text" class="form-control" id="droneMaxSpeed" name="maxSpeed" value="{{maxSpeed}}">
    </div>
    <button type="submit" class="btn btn-dark">Edit</button>
</form>